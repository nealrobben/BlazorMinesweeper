@page "/"
@using Blazor.Minesweeper.Models;

<div class="minesweeper-game minesweeper-medium">
    <div class="minesweeper-board" @oncontextmenu:preventDefault onmousedown="@(board.Status != GameStatus.Completed ? "faceOooh(event);" : "")" onmouseup="faceSmile();">

        <BlazorMinesweeper.Client.Components.Header board="board" 
            MaxWidth="MaxWidth" 
            NumberOfMinesRemaining="board.NumberOfMinesRemaining"
            SecondsElapsed="board.Stopwatch.Elapsed.Seconds"
            FaceIconClicked="FaceIconClicked" />

        <BlazorMinesweeper.Client.Components.MineField board="board" MaxWidth="MaxWidth" MaxHeight="MaxHeight" />

    </div>
</div>

