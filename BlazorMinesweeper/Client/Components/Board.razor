
<div class="minesweeper-game minesweeper-medium">
    <div class="minesweeper-board" @oncontextmenu:preventDefault
         onmousedown="@(board.Status != GameStatus.Completed ? "faceOooh(event);" : "")"
         onmouseup="faceSmile();">

        <Header board="board"
                MaxWidth="MaxWidth"
                NumberOfMinesRemaining="board.NumberOfMinesRemaining"
                SecondsElapsed="board.Stopwatch.Elapsed.Seconds"
                FaceIconClicked="FaceIconClicked" />

        <MineField Panels="board.Panels"
                   MaxWidth="MaxWidth"
                   MaxHeight="MaxHeight"
                   OnLeftClickPanel="@((e) => board.MakeMove(e))"
                   OnRightClickPanel="@((e) => board.FlagPanel(e))" />

    </div>
</div>